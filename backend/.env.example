# Resumind Backend Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/resumind
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/resumind

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_change_this_in_production_12345
SESSION_MAX_AGE=604800000 # 7 days in milliseconds

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# JWT Configuration (if using JWT along with sessions)
JWT_SECRET=your_jwt_secret_key_change_in_production

# AI/ML Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_API_KEY=your_ai_service_api_key

# PDF Processing Configuration
PDF_UPLOAD_MAX_SIZE=10485760 # 10MB in bytes

# Email Configuration (for password reset, etc)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# File Upload Configuration
UPLOAD_DIR=./uploads
TEMP_DIR=./temp
